<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".selfAssesmentActivity">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/Anxiety"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10sp"
        app:cardCornerRadius="15sp"
        android:layout_marginTop="15sp"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        app:cardBackgroundColor="@color/yellow">

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal">
         <ImageView
             android:layout_width="100sp"
             android:layout_height="100sp"
             android:padding="8sp"
             android:src="@drawable/anxiety"/>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="ANXIETY"
             android:textSize="30sp"
             android:layout_marginLeft="40dp"
             android:layout_marginTop="25sp"
             android:textStyle="bold"/>



     </LinearLayout>




    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/Anger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10sp"
        app:cardCornerRadius="15sp"
        android:layout_marginTop="15sp"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        app:cardBackgroundColor="@color/design_default_color_primary_variant">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:padding="8sp"
                android:src="@drawable/anger"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ANGER"
                android:textSize="30sp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="25sp"
                android:textStyle="bold"/>



        </LinearLayout>




    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/Addiction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10sp"
        app:cardCornerRadius="15sp"
        android:layout_marginTop="15sp"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        app:cardBackgroundColor="@color/cardview_shadow_end_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:padding="8sp"
                android:src="@drawable/griefandloss"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RELATIONSHIP"
                android:textSize="30sp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="25sp"
                android:textStyle="bold"/>



        </LinearLayout>




    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/ChronicPain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10sp"
        app:cardCornerRadius="15sp"
        android:layout_marginTop="15sp"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        app:cardBackgroundColor="@color/design_default_color_primary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:padding="8sp"
                android:src="@drawable/chronicpain"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CHRONIC PAIN"
                android:textSize="30sp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="25sp"
                android:textStyle="bold"/>



        </LinearLayout>




    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/Depression"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10sp"
        app:cardCornerRadius="15sp"
        android:layout_marginTop="15sp"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        app:cardBackgroundColor="@color/skyblue">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:padding="8sp"
                android:src="@drawable/depression" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="25sp"
                android:text="DEPRESSION"
                android:textSize="30sp"
                android:textStyle="bold" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10sp"
        app:cardCornerRadius="15sp"
        android:layout_marginTop="15sp"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        app:cardBackgroundColor="@color/pink">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:padding="8sp"
                android:src="@drawable/anxiety"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ANXIETY"
                android:textSize="30sp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="25sp"
                android:textStyle="bold"/>



        </LinearLayout>




    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10sp"
        app:cardCornerRadius="15sp"
        android:layout_marginTop="15sp"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        app:cardBackgroundColor="@color/yellow">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:padding="8sp"
                android:src="@drawable/anxiety"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ANXIETY"
                android:textSize="30sp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="25sp"
                android:textStyle="bold"/>



        </LinearLayout>




    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10sp"
        app:cardCornerRadius="15sp"
        android:layout_marginTop="15sp"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        app:cardBackgroundColor="@color/skyblue">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:padding="8sp"
                android:src="@drawable/griefandloss"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GRIEF/LOSS"
                android:textSize="30sp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="25sp"
                android:textStyle="bold"/>



        </LinearLayout>




    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10sp"
        app:cardCornerRadius="15sp"
        android:layout_marginTop="15sp"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        app:cardBackgroundColor="@color/yellow">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:padding="8sp"
                android:src="@drawable/phobia"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PHOBIA"
                android:textSize="30sp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="25sp"
                android:textStyle="bold"/>



        </LinearLayout>




    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10sp"
        app:cardCornerRadius="15sp"
        android:layout_marginTop="15sp"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        app:cardBackgroundColor="@color/pink">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:padding="8sp"
                android:src="@drawable/mentalhealth"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MENTAL HEALTH"
                android:textSize="30sp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="25sp"
                android:textStyle="bold"/>



        </LinearLayout>




    </androidx.cardview.widget.CardView>






</LinearLayout>



</ScrollView>